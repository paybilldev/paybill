{
  "extends": "@paybilldev/tsconfig",
  "compilerOptions": {
    "strict": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "types",
    "types": ["node"],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
