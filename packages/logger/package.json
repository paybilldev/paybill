{
  "name": "@paybilldev/logger",
  "version": "1.0.0-beta.1",
  "description": "Logger package for PaybillDev, providing logging utilities for tracking application events and errors.",
  "license": "BSL-1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "keywords": [
    "logger"
  ],
  "author": {
    "name": "Paybill Ke Limited",
    "email": "support@paybill.dev"
  },
  "scripts": {
    "build": "unbuild --clean",
    "stub": "unbuild --stub",
    "clean": "rimraf node_modules dist .turbo coverage",
    "typecheck": "tsc --project tsconfig.json",
    "test": "NODE_ENV=test vitest",
    "cov": "NODE_ENV=test vitest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paybilldev/paybill.git",
    "directory": "packages/logger"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "safe-stable-stringify": "^2.5.0"
  },
  "devDependencies": {
    "@paybilldev/tsconfig": "workspace:^",
    "@types/lodash": "4.17.20",
    "@types/node": "20.17.10",
    "@vitest/coverage-istanbul": "^3.2.4",
    "rimraf": "6",
    "fs-extra": "11.3.3",
    "ts-node": "10.9.2",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:"
  }
}
