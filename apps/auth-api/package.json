{
  "name": "auth-api",
  "version": "1.0.0-beta.1",
  "private": true,
  "description": "Auth API service for the paybill",
  "keywords": [
    "auth-api",
    "auth"
  ],
  "author": {
    "name": "Paybill Ke Limited",
    "email": "support@paybill.dev"
  },
  "license": "BSL-1.0",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "docker:build": "docker build -t $npm_package_name:$npm_package_version . -f ./Dockerfile",
    "docker:push": " docker push $npm_package_name:$npm_package_version",
    "docker:run": "docker run -p 4000:4000 -d $npm_package_name:$npm_package_version",
    "docker:build:lambda": "DOCKER_BUILDKIT=1 sudo docker build -f Dockerfile.lambda --build-arg NR_ENABLED=$NR_ENABLED_VALUE -t $npm_package_name:$npm_package_version-lambda  . -f ./Dockerfile.lambda",
    "docker:push:lambda": "sudo docker push $npm_package_name:$npm_package_version-lambda",
    "docker:run:lambda": "docker run -p 4000:4000 -d  $npm_package_name:$npm_package_version-lambda",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test vitest",
    "cov": "NODE_ENV=test vitest --coverage"
  },
  "dependencies": {
    "@fastify/aws-lambda": "^6.3.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@paybilldev/cache": "workspace:*",
    "@paybilldev/sequelize": "workspace:*",
    "@types/lodash": "^4.17.23",
    "aws-lambda": "^1.0.7",
    "base64url": "^3.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.6.1",
    "dotenv-extended": "^2.9.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.1.0",
    "glob": "11.0.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.21",
    "semver": "7.7.2",
    "supertest": "^7.2.2",
    "uuid": "^13.0.0",
    "validator": "^13.12.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@paybilldev/tsconfig": "workspace:*",
    "@types/aws-lambda": "^8.10.159",
    "@types/crypto-js": "^4.2.2",
    "@types/glob": "^7.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.13.14",
    "@types/semver": "7.7.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.35.0",
    "neostandard": "^0.12.2",
    "tsx": "^4.19.1",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paybilldev/paybill.git",
    "directory": "apps/auth-api"
  },
  "publishConfig": {
    "access": "public"
  }
}
